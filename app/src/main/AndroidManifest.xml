<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rifat.sliderbot" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:name=".Utilities.Global"
        android:allowBackup="true"
        android:icon="@drawable/ic_sliderbot_38x38"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:screenOrientation="landscape"
            android:name=".Activities.SplashScreen"
            android:label="Slider Bot" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="Settings"
            android:icon="@drawable/ic_sliderbot"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Activities.HowToUseActivity"
            android:label="How to Use"
            android:icon="@drawable/ic_sliderbot">
        </activity>
        <activity
            android:name=".Activities.About"
            android:label="About"
            android:icon="@drawable/ic_sliderbot">
        </activity>
    </application>

</manifest>
