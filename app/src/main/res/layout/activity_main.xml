<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sliderbot_38x38"/>

            <TextView
                android:id="@+id/applicationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SliderBot V 1.0.0"
                android:textSize="30sp"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayoutMainTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnHowToUse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:layout_weight="1.3"/>

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:layout_weight=".9"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65">

        <LinearLayout
            android:id="@+id/sliderConfigOperationLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnSelectPresets"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Select Presets"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnConnectBluetooth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Connect"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/configurationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff42fff2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".7">

                    <TextView
                        android:id="@+id/tvPresetNameTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preset Name:   "
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tvPresetName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custom Setting"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Time:  "
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/etTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:editable="false"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnEditTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Edit"
                        android:layout_gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Travel:"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/etTravel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:editable="false"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnEditTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Edit"
                        android:layout_gravity="right"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/motionSettingLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnBackwardMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Backward"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnForwardMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Forward"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnGo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:text="Go"
                    android:textColor="#000000"
                    android:background="#ffaaff3d"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@mipmap/ic_launcher"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
