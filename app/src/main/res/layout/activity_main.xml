<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/applicationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SliderBot V 1.0.0"
        android:textSize="30sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayoutMainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/btnHowToUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Use"/>

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"/>

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="About"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSelectPresets"
        android:layout_below="@id/linearLayoutMainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Presets"/>

    <LinearLayout
        android:id="@+id/sliderConfigOperationLayout"
        android:orientation="vertical"
        android:layout_below="@id/btnSelectPresets"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/configurationLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff321751">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPresetNameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preset Name:   "
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvPresetName"
                    android:layout_toRightOf="@id/tvPresetNameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Setting"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/tvPresetNameTag"
                android:id="@+id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:  "
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnEditTime"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:text="Edit"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/travelLayout"
                android:layout_below="@id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTravel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel:"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/etTravel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnEditTravel"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:text="Edit"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/motionSettingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:id="@+id/btnBackwardMotion"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="<---"
                android:textSize="20sp"
                android:layout_weight=".5"/>

            <Button
                android:id="@+id/btnForwardMotion"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="--->"
                android:textSize="20sp"
                android:layout_weight=".5"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="Go"
                android:textColor="#000000"
                android:background="#ffaaff3d"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignTop="@id/btnSelectPresets"
        android:layout_toRightOf="@id/sliderConfigOperationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="@mipmap/ic_launcher"/>

    </LinearLayout>

</RelativeLayout>
